#!/bin/bash

branch_switched=$3

if [[ $branch_switched != '1' ]]
then
    exit 0
fi

echo "----- POST CHECKOUT -----"

# Get name of checked out branch
current_branch=$(git rev-parse --abbrev-ref HEAD)

# Get root directory
root_dir=$(git rev-parse --show-toplevel)

if [[ $current_branch == release/* ]]
then
    echo "Remove example files from app"
    ed -i 's/\[_exampleFileTree\]/[]/' flutter_app/lib/templates/contentarea.dart
    ed -i 's/\[_exampleFile\]/[]/' flutter_app/lib/templates/contentarea.dart

    echo "Commit removed example files"
    git add $root_dir
    git commit -m "<hook> removed example files from release branch"
fi

echo "--- POST CHECKOUT END ---"
